ZMK_MOD_MORPH(sym_layer6,
    bindings = <&mo 2>, <&mo 6>;
    mods = <(MOD_LGUI|MOD_RGUI)>;
)

ZMK_BEHAVIOR(flip_buffer, macro,
    wait-ms = <100>;
    tap-ms = <5>;
    bindings = <&kp LC(X) &kp B &kp RET>;
)

ZMK_BEHAVIOR(clear_shell, macro,
    wait-ms = <100>;
    tap-ms = <5>;
    bindings = <&kp LC(C) &kp LG(O)>;
)

